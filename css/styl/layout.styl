@import 'nib'
@import url(http://fonts.googleapis.com/css?family=Gabriela)

body, html
   margin 0
   padding 0
   overflow hidden
   font-family 'Gabriela', serif
   background-color #CCC

#cr-stage
   border 2px solid #444
   margin 5px auto
   background-color #444

.item-ui
   absolute right 10px top 5px
   width: 100px
   height: 803px
   background-color #444

   .item
      color whitesmoke
      margin 5px

   .header span
      border-bottom solid 1px

.help-screen
   width: 100%
   height: 100%
   opacity: 1
   position fixed
   color white
   background-color #444
   z-index 100
   display none

   .help-header
      text-align center

   .help-footer
      display block
      margin-top 20px
      text-align center

   .help-section
      white-space pre
      font-family monospace
      display inline-block
      vertical-align top

      .section-head
         color #30FF30
         font-weight bold

.opening-screen
   width:  100%
   height: 100%
   opacity: 1
   position fixed
   color white
   background-color #444
   z-index 100

   .line
      opacity 0
      display block
      margin 10px 20px

   .active-area
      height 100%

   .ready
      absolute bottom 44% right 43%

   .tip
      absolute bottom 40% right 41%

   .credits
      absolute bottom 50px
      white-space pre

   .title
      text-align center

   .twitter
      color #86D

.ending-screen
   width: 100%
   height: 100% 
   opacity: 1
   position: fixed
   color white
   background-color rgba(0,0,255,0)
   z-index 100
   display none
   text-align center
   padding-top 50px

   .line
      opacity 0
      display block
      margin 10px 20px

